@{
    ViewData["Title"] = "Contato";
}

<div class="page-header">
    <h1>Gerenciar Informações de Contato</h1>
</div>

<div class="contact-form-container">
    <form id="contactInfoForm">
        <div class="form-section">
            <h2>Informações Básicas</h2>
            <div class="form-group">
                <label for="fullName">Nome Completo</label>
                <input type="text" id="fullName" value="Victoria Caroline de Souza Alves" required>
            </div>
            <div class="form-group">
                <label for="title">Título Profissional</label>
                <input type="text" id="title" value="Especialista Ambiental" required>
            </div>
            <div class="form-group">
                <label for="email">Email</label>
                <input type="email" id="email" value="victoria.caroline@email.com" required>
            </div>
            <div class="form-group">
                <label for="phone">Telefone</label>
                <input type="text" id="phone" value="+55 (11) 98765-4321">
            </div>
            <div class="form-group">
                <label for="location">Localização</label>
                <input type="text" id="location" value="São Paulo, SP - Brasil">
            </div>
        </div>

        <div class="form-section">
            <h2>Redes Sociais</h2>
            <div id="socialLinks">
                <div class="social-link-item">
                    <div class="form-group">
                        <label for="socialType0">Rede Social</label>
                        <select id="socialType0" class="social-type">
                            <option value="linkedin">LinkedIn</option>
                            <option value="github">GitHub</option>
                            <option value="twitter">Twitter</option>
                            <option value="instagram">Instagram</option>
                            <option value="facebook">Facebook</option>
                        </select>
                    </div>
                    <div class="form-group">
                        <label for="socialUrl0">URL</label>
                        <input type="url" id="socialUrl0" class="social-url" value="https://www.linkedin.com/in/victoria-caroline-de-souza-alves-663814186/">
                    </div>
                    <button type="button" class="remove-btn">Remover</button>
                </div>
            </div>
            <button type="button" id="addSocialBtn" class="add-social-btn">Adicionar Rede Social</button>
        </div>

        <div class="form-section">
            <h2>Sobre Mim</h2>
            <div class="form-group">
                <label for="aboutMe">Descrição</label>
                <textarea id="aboutMe" rows="6">Sou Victoria Caroline de Souza Alves, uma especialista ambiental com foco em desenvolvimento sustentável e gestão de recursos hídricos. Minha paixão pela conservação ambiental me impulsiona a criar soluções inovadoras que equilibram a preservação ecológica com as necessidades humanas.</textarea>
            </div>
        </div>

        <div class="form-actions centered">
            <button type="submit" class="save-btn">Salvar Alterações</button>
        </div>
    </form>
</div>

@section Scripts {

}